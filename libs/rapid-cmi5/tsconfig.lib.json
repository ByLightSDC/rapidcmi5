{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../../../dist/out-tsc",
    "types": [
      "node",
      "@nx/react/typings/cssmodule.d.ts",
      "@nx/react/typings/image.d.ts"
    ],
    "paths": {
      "@rapid-cmi5/cmi5-build/backend": [
        "libs/cmi5-build/backend/src/index.ts"
      ],
      "@rapid-cmi5/cmi5-build/common": ["libs/cmi5-build/common/src/index.ts"],
      "@rapid-cmi5/ui/keycloak": [
        "libs/ui/auth/keycloak/src/index.ts"
      ],
      "@rapid-cmi5/frontend/clients/devops-api": [
        "libs/frontend/clients/devops-api/src/index.ts"
      ],
      "@rapid-cmi5/frontend/environment": [
        "libs/frontend/environment/src/index.ts"
      ],
      "@rapid-cmi5/types/cmi5": ["libs/types/cmi5/src/index.ts"],
      "@rapid-cmi5/ui/api/hooks": ["libs/ui/api/hooks/src/index.ts"],
      "@rapid-cmi5/ui/branded": ["libs/ui/components/branded/src/index.ts"],
      "@rapid-cmi5/ui/redux": ["libs/ui/redux/src/index.ts"],
      "@rapid-cmi5/ui/validation": ["libs/ui/validation/src/index.ts"]
    },
    "declaration": true
  },

  "files": [],
  "exclude": [
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/*.spec.tsx",
    "**/*.test.tsx",
    "**/*.spec.js",
    "**/*.test.js",
    "**/*.spec.jsx",
    "**/*.test.jsx",
    "jest.config.ts",
    "**/*.stories.ts",
    "**/*.stories.js",
    "**/*.stories.jsx",
    "**/*.stories.tsx"
  ],
  "include": [
    "src/**/*.js",
    "src/**/*.jsx",
    "src/**/*.mdx",
    "src/**/*.ts",
    "src/**/*.tsx"
  ]
}
